<Window x:Class="Module2.Windows.AddPartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module2.Windows"
        mc:Ignorable="d"
        Title="AddPartner" Height="510" Width="400">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="150,20,0,0"  VerticalAlignment="Top" Width="200" x:Name="cbType"/>
        <TextBox HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbName"/>
        <TextBox HorizontalAlignment="Left" Margin="150,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbLastNameDirector"/>
        <TextBox HorizontalAlignment="Left" Margin="150,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbFirstNameDirector"/>
        <TextBox HorizontalAlignment="Left" Margin="150,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbPatronymicDirector"/>
        <TextBox HorizontalAlignment="Left" Margin="150,170,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbEmail"/>
        <TextBox HorizontalAlignment="Left" Margin="150,200,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbPhone"/>
        <TextBox HorizontalAlignment="Left" Margin="150,230,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbIndex"/>
        <TextBox HorizontalAlignment="Left" Margin="150,260,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbRegion" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="150,290,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbCity" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="150,320,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbStreet" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="150,350,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbHouse" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="150,380,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbINN" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="150,410,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" x:Name="tbRating" Grid.Row="1"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="Тип партнера" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,50,0,0" TextWrapping="Wrap" Text="Наименование" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,80,0,0" TextWrapping="Wrap" Text="Фамилия директора" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,110,0,0" TextWrapping="Wrap" Text="Имя директора" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,140,0,0" TextWrapping="Wrap" Text="Отчество директора" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,170,0,0" TextWrapping="Wrap" Text="Почта" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,200,0,0" TextWrapping="Wrap" Text="Телефон" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,230,0,0" TextWrapping="Wrap" Text="Индекс" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,260,0,0" TextWrapping="Wrap" Text="Область" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,290,0,0" TextWrapping="Wrap" Text="Город" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,320,0,0" TextWrapping="Wrap" Text="Улица" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,350,0,0" TextWrapping="Wrap" Text="Дом" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,380,0,0" TextWrapping="Wrap" Text="ИНН" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,410,0,0" TextWrapping="Wrap" Text="Рейтинг" VerticalAlignment="Top" Grid.Row="1"/>

        <Button Width="100" Height="20" Content="СОХРАНИТЬ" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,200,10" Grid.Row="1" Click="ButtonSave_Click" Background="#67BA80"/>
        <Button Width="100" Height="20" Content="ОТМЕНИТЬ" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="200,0,0,10" Grid.Row="1" Click="ButtonCancel_Click"/>
    </Grid>
</Window>
